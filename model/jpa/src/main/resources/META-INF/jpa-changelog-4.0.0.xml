    <changeSet author="bburke@redhat.com" id="4.0.0-CLEANUP-UNUSED-TABLE">
        <validCheckSum>7:7822e0165097182e8f653c35517656a3</validCheckSum>
        <dropTable tableName="CLIENT_IDENTITY_PROV_MAPPING"/>
